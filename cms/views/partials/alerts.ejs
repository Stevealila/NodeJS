<div class="container">
    <% if (sucess_alert) { %>
        <div class="alert alert-success alert-dismissable fade show my-2" role="alert">
            <!-- <strong><%= sucess_alert %></strong> -->
            <button class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true"></span>
            </button>
        </div>
    <% } %>
    <% if (failure_alert) { %>
        <div class="alert alert-danger alert-dismissable fade show my-2" role="alert">
            <!-- <strong><%= failure_alert %></strong> -->
            <button class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true"></span>
            </button>
        </div>
    <% } %>
</div>