<%- include("../partials/dashboard/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <form action="/posts/create" method="post" class="my-4 mx-auto">
                <!-- Form -->
                <div class="form-group my-3">
                    <label for="title">Title: </label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="title" name="title" autofocus required>
                    </div>  
                </div>
                <div class="form-group my-3">
                    <label for="status">Status: </label>
                    <div class="input-group">
                        <select name="status" id="status" class="form-control">
                            <option value="public">public</option>
                            <option value="private">private</option>
                            <option value="draft">draft</option>
                        </select>
                    </div>  
                </div>
                <% if(categories.length > 0) { %>
                <div class="form-group my-3">
                    <label for="category">Category: </label>
                    <div class="input-group">
                        <select name="category" id="category" class="form-control">
                        <% categories.forEach ( category => { %>
                            <option value="<%= category._id %>"><%= category.title %></option>
                        <% }) %>
                            </select>
                    </div>  
                </div>
                <% } %>
                    
                <div class="form-group my-3">
                    <label for="_body">Post Body: </label>
                    <div class="input-group">
                        <textarea class="form-control" rows="7" id="_body" name="_body"></textarea>
                    </div>  
                </div>
                <div class="d-grid">
                    <button class="btn btn-dark w-50 mx-auto py-2">Save</button>
                </div>
            </form>

            </div></div></div>
