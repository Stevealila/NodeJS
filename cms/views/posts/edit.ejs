<%- include("../partials/dashboard/header") %>

<div class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 d-flex align-items-center justify-content-center">
                <div class="bg-white shadow border-0 rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                    <form action="/posts/<%= post.id %>?_method=PUT" method="post" class="mt-4">
                        <!-- Form -->
                        <div class="form-group my-3">
                            <label for="title">Title: </label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="title" name="title_update" value="<%= post.title %>" autofocus required>
                            </div>  
                        </div>
                        <div class="form-group my-3">
                            <label for="status">Status: </label>
                            <div class="input-group">
                                <select name="status_update" id="status" class="form-control">
                                    <% if(post.status) { %>
                                        <option selected value="<%= post.status %>"><%= post.status %></option>
                                    <% } %>
                                        <option value="public">public</option>
                                        <option value="private">private</option>
                                        <option value="draft">draft</option>
                                </select>
                            </div>  
                        </div>

                        <div class="form-group my-3">
                            <label for="category">Category: </label>
                            <div class="input-group">
                                <select name="category_update" id="category" class="form-control">

                                    <option selected value="<%= post.category %>"><%= post.category.title %></option>
                                    <% categories.forEach( category => { %>
                                        <option value="<%= category._id %>"><%= category.title %></option>
                                        <% }) %>
                                </select>
                            </div>  
                        </div>

                        <div class="form-group my-3">
                            <label for="_body">Post Body: </label>
                            <div class="input-group">
                                <textarea class="form-control" id="_body" rows="7" name="_body_update"><%= post._body %></textarea>
                            </div>  
                        </div>
                        <div class="d-flex">
                            <a class="btn btn-warning btn-sm w-50 mx-2 py-2" href="/dashboard/posts">Cancel</a>
                            <button class="btn btn-primary btn-sm w-50 mx-2 py-2">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</div></div></div>
